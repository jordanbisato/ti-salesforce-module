<RelativeLayout style="@style/Widget.ServiceChat.MinimizedView"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:background="@drawable/salesforce_minimized_view"
                tools:layout_height="102dp"
                tools:layout_width="94dp">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/chat_minimized_agent_avatar"
        android:layout_width="@dimen/chat_minimized_agent_avatar_height"
        android:layout_height="@dimen/chat_minimized_agent_avatar_height"
        android:layout_centerHorizontal="true"
        android:contentDescription="@null"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/salesforce_agent_avatar"/>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/chat_minimized_agent_message_indicator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/chat_minimized_chat_bubble_height"
        android:layout_below="@+id/chat_minimized_agent_avatar"
        android:layout_marginStart="@dimen/chat_minimized_chat_bubble_marginLeft"
        android:layout_marginTop="@dimen/chat_minimized_chat_bubble_marginTop"
        android:contentDescription="@null"
        app:srcCompat="@drawable/chat_minimized_message_indicator"/>

    <com.salesforce.android.service.common.ui.views.SalesforceTextView
        android:id="@+id/chat_minimized_message_counter"
        style="@style/ServiceChatText.MinimizedCounter"
        android:layout_alignBottom="@id/chat_minimized_agent_message_indicator"
        android:layout_alignEnd="@id/chat_minimized_agent_message_indicator"
        android:layout_alignStart="@id/chat_minimized_agent_message_indicator"
        android:layout_alignTop="@id/chat_minimized_agent_message_indicator"
        tools:text="9+"/>


    <com.salesforce.android.service.common.ui.views.SalesforceTextView
        android:id="@+id/chat_minimized_agent_name"
        style="@style/ServiceChatText.Minimized.AgentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/chat_minimized_agent_avatar"
        android:layout_centerHorizontal="true"
        android:importantForAccessibility="no"
        tools:text="Agent Name"/>

</RelativeLayout>
