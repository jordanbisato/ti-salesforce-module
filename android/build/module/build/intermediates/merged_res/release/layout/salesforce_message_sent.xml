<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginEnd="@dimen/salesforce_message_feed_horizontal_margin"
              android:layout_marginLeft="@dimen/salesforce_message_feed_horizontal_margin"
              android:layout_marginRight="@dimen/salesforce_message_feed_horizontal_margin"
              android:layout_marginStart="@dimen/salesforce_message_feed_horizontal_margin"
              android:layout_marginTop="8dp"
              android:gravity="end"
              android:orientation="vertical">

    <com.salesforce.android.service.common.ui.views.SalesforceTextView
        android:id="@+id/salesforce_sent_message_text"
        style="@style/SalesforceStyleMessageBubbleSent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer et vulputate metus. Sed euismod dui turpis, eu ullamcorper enim fringilla vitae. Quisque sed mauris molestie, faucibus mi in, hendrerit risus. Suspendisse in tincidunt arcu."/>

    <com.salesforce.android.service.common.ui.views.SalesforceTextView
        android:id="@+id/salesforce_sent_message_timestamp"
        style="@style/SalesforceStyleTextTiny"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="6dp"
        tools:text="12:49 PM"
        tools:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/salesforce_sent_message_warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginStart="60dp"
        android:layout_marginTop="6dp"
        android:visibility="gone"
        tools:visibility="visible">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/salesforce_sent_message_warning_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:contentDescription="@null"
            app:srcCompat="@drawable/salesforce_ic_warning"/>

        <com.salesforce.android.service.common.ui.views.SalesforceTextView
            android:id="@+id/salesforce_sent_message_warning_text"
            style="@style/SalesforceStyleTextTiny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="6dp"
            android:layout_toEndOf="@id/salesforce_sent_message_warning_icon"
            tools:text="Warning lots of words go here to test how the layout wraps for localization support."/>

    </RelativeLayout>

    <Space
        android:id="@+id/salesforce_sent_message_footer_space"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:visibility="gone"/>

</LinearLayout>
