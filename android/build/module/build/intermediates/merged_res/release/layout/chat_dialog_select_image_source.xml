<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/chat_image_source_icon"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:contentDescription="@null"
        android:tint="@color/salesforce_contrast_secondary"
        tools:contentDescription="@string/chat_dialog_select_image_source_camera"
        tools:srcCompat="@drawable/salesforce_ic_camera"/>

    <com.salesforce.android.service.common.ui.views.SalesforceTextView
        android:id="@+id/chat_image_source_label"
        style="@style/ServiceChatText.DialogMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="16dp"
        android:layout_toEndOf="@id/chat_image_source_icon"
        android:gravity="center|start"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        tools:text="Take a photo - this is some long text to see how it wraps"/>

</RelativeLayout>
