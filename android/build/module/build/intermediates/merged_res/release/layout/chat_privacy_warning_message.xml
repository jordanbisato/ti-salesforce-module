<android.support.constraint.ConstraintLayout
    android:id="@+id/chat_privacy_warning"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="end"
    android:layout_marginBottom="16dp"
    android:layout_marginEnd="@dimen/salesforce_message_feed_horizontal_margin"
    android:layout_marginLeft="@dimen/salesforce_message_feed_horizontal_margin"
    android:layout_marginRight="@dimen/salesforce_message_feed_horizontal_margin"
    android:layout_marginStart="@dimen/salesforce_message_feed_horizontal_margin"
    android:layout_marginTop="16dp">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/chat_privacy_warning_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="6dp"
        android:layout_marginStart="60dp"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/chat_privacy_warning_text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:srcCompat="@drawable/salesforce_ic_warning"/>

    <com.salesforce.android.service.common.ui.views.SalesforceTextView
        android:id="@+id/chat_privacy_warning_text"
        style="@style/SalesforceStyleTextTiny"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:contentDescription="@null"
        android:maxWidth="250dp"
        android:text="@string/chat_message_delivery_failed"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@id/chat_privacy_warning_icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>
