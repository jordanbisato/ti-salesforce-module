<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:background="@color/salesforce_contrast_inverted">

    <android.support.v4.widget.Space
        android:id="@+id/salesforce_message_input_left_space"
        android:layout_width="@dimen/salesforce_message_feed_horizontal_margin"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/salesforce_message_input_action_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="#00000000"
        android:paddingBottom="10dp"
        android:paddingStart="0dp"
        android:paddingEnd="10dp"
        android:paddingTop="10dp"
        android:scaleType="fitCenter"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/salesforce_message_input_left_space"
        tools:srcCompat="@drawable/salesforce_ic_camera"
        tools:visibility="visible"/>

    <com.salesforce.android.service.common.ui.views.SalesforceEditText
        android:id="@+id/salesforce_message_input"
        style="@style/SalesforceStyleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:hint="@string/salesforce_message_input_hint"
        android:imeOptions="flagNoExtractUi"
        android:minHeight="48dp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:textColorHint="@color/salesforce_contrast_secondary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/salesforce_message_input_action_button"
        app:layout_constraintEnd_toStartOf="@+id/salesforce_send_message_button"/>

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/salesforce_send_message_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="@dimen/salesforce_message_feed_horizontal_margin"
        android:background="#00000000"
        android:contentDescription="@string/salesforce_send_message_content_description"
        android:paddingBottom="8dp"
        android:paddingStart="8dp"
        android:paddingEnd="0dp"
        android:paddingTop="8dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/salesforce_message_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/salesforce_ic_message_send"/>

</android.support.constraint.ConstraintLayout>
