<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginEnd="@dimen/salesforce_message_feed_horizontal_margin"
              android:layout_marginLeft="@dimen/salesforce_message_feed_horizontal_margin"
              android:layout_marginRight="@dimen/salesforce_message_feed_horizontal_margin"
              android:layout_marginStart="@dimen/salesforce_message_feed_horizontal_margin"
              android:layout_marginTop="8dp"
              android:orientation="vertical"
              tools:background="@color/salesforce_contrast_quaternary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/salesforce_agent_avatar_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/salesforce_agent_avatar"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_margin="5dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/salesforce_agent_avatar"
                tools:ignore="ContentDescription"/>

            <FrameLayout
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:scaleType="fitStart"
                    android:src="@drawable/chat_menu_speech_arrow"
                    tools:ignore="ContentDescription"/>
            </FrameLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="60dp"
            android:orientation="vertical">

            <com.salesforce.android.service.common.ui.views.SalesforceTextView
                android:id="@+id/chat_menu_header_text"
                style="@style/ServiceChatMenuHeaderText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:text="A wild menu has appeared!"
                tools:visibility="visible"/>

            <LinearLayout
                android:id="@+id/chat_menu_item_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:splitMotionEvents="false"/>
        </LinearLayout>
    </LinearLayout>

    <android.support.v4.widget.Space
        android:id="@+id/chat_menu_footer_space"
        android:layout_width="wrap_content"
        android:layout_height="16dp"/>
</LinearLayout>
