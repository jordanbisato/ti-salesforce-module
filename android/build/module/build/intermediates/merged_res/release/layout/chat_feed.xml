<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.salesforce.android.service.common.ui.views.SalesforceConnectionBanner
        android:id="@+id/chat_connection_banner"
        style="@style/SalesforceConnectionBanner"
        android:layout_marginTop="?android:attr/actionBarSize"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/chat_message_feed"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/chat_feed_content_description"
        app:layout_behavior="com.salesforce.android.service.common.ui.behavior.SalesforceSqueezeBehavior"
        app:salesforce_squeeze_beneath_view="@+id/appbar"
        app:salesforce_squeeze_over_view="@+id/chat_feed_input_footer"/>

    <FrameLayout
        android:id="@+id/chat_feed_input_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:layout_behavior="com.salesforce.android.service.common.ui.behavior.SalesforcePushUpAndHideBehavior">

        <include layout="@layout/salesforce_message_input"/>
    </FrameLayout>

    <com.salesforce.android.service.common.ui.views.SalesforceBottomSheetMenu
        android:id="@+id/chat_bottom_sheet_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/salesforce_contrast_inverted"
        android:elevation="4dp"
        android:splitMotionEvents="false"
        app:behavior_hideable="true"
        app:behavior_peekHeight="0dp"
        app:layout_behavior="@string/bottom_sheet_behavior"/>

    <include layout="@layout/chat_resume_error"/>
</merge>
