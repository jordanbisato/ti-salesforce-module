<LinearLayout
    android:id="@+id/chat_fullscreen_connecting"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/salesforce_brand_secondary_inverted"
    android:gravity="center"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="70dp"/>

    <com.salesforce.android.service.common.ui.views.SalesforceLoadingDots
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"/>

    <TextView
        style="@style/ServiceChatFullscreenConnectingTitleText"
        android:text="@string/chat_fullscreen_connecting_title"/>

    <TextView
        style="@style/ServiceChatFullscreenConnectingDescriptionText"
        android:text="@string/chat_fullscreen_connecting_description"/>
</LinearLayout>