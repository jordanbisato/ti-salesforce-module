<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginEnd="@dimen/salesforce_message_feed_horizontal_margin"
              android:layout_marginLeft="@dimen/salesforce_message_feed_horizontal_margin"
              android:layout_marginRight="@dimen/salesforce_message_feed_horizontal_margin"
              android:layout_marginStart="@dimen/salesforce_message_feed_horizontal_margin"
              android:layout_marginTop="8dp"
              android:orientation="vertical"
              android:animateLayoutChanges="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/salesforce_rich_link_agent_avatar_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/salesforce_rich_link_agent_avatar"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_margin="5dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/salesforce_agent_avatar"
                tools:ignore="ContentDescription"/>

            <FrameLayout
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:scaleType="fitStart"
                    android:src="@drawable/salesforce_message_bubble_received_speech_arrow"
                    tools:ignore="ContentDescription"/>
            </FrameLayout>

        </LinearLayout>


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      xmlns:app="http://schemas.android.com/apk/res-auto"
                      xmlns:tools="http://schemas.android.com/tools"
                      android:layout_height="wrap_content"
                      android:layout_width="match_parent"
                      android:layout_marginEnd="60dp"
                      android:orientation="vertical"
                      android:clipChildren="true"
                      style="@style/SalesforceStyle.MessageBubble.Received.LinkPreview.Container">


            <com.salesforce.android.service.common.ui.views.SalesforceRoundedImageView
                android:id="@+id/salesforce_link_preview_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/salesforce_message_linkpreview_ogimage_height"
                android:adjustViewBounds="true"
                style="@style/SalesforceStyle.MessageBubble.Received.LinkPreview.ImagePreview"/>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/link_preview_constraint_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="7dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:layout_marginEnd="6dp"
                    android:orientation="vertical"
                    android:padding="0dp"
                    app:layout_constraintEnd_toStartOf="@id/salesforce_link_preview_right_arrow_spacer"
                    app:layout_constraintStart_toStartOf="@id/link_preview_constraint_layout">

                    <com.salesforce.android.service.common.ui.views.SalesforceTextView
                        android:id="@+id/salesforce_link_preview_title"
                        style="@style/SalesforceStyle.MessageBubble.Received.LinkPreview.Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_marginEnd="24dp"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:scrollHorizontally="true"/>

                    <com.salesforce.android.service.common.ui.views.SalesforceTextView
                        android:id="@+id/salesforce_link_preview_description"
                        style="@style/SalesforceStyle.MessageBubble.Received.LinkPreview.Description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_marginEnd="12dp"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:scrollHorizontally="true"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="12dp"
                        android:layout_marginBottom="0dp"
                        android:orientation="horizontal"
                        android:padding="0dp">

                        <com.salesforce.android.service.common.ui.views.SalesforceRoundedImageView
                            android:id="@+id/salesforce_link_preview_favicon"
                            style="@style/Base.SalesforceStyle.Favicon"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="0dp"
                            android:padding="0dp"/>

                        <com.salesforce.android.service.common.ui.views.SalesforceTextView
                            android:id="@+id/salesforce_link_preview_url"
                            style="@style/SalesforceStyle.MessageBubble.Received.LinkPreview.Url"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="0dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:padding="0dp"
                            android:scrollHorizontally="true"/>

                        <com.salesforce.android.service.common.ui.views.SalesforceLoadingDots
                            android:id="@+id/salesforce_link_preview_loadingdots"
                            android:layout_width="wrap_content"
                            android:layout_height="16dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginStart="12dp"/>

                    </LinearLayout>

                </LinearLayout>

                <Space
                    android:id="@+id/salesforce_link_preview_right_arrow_spacer"
                    android:layout_width="6dp"
                    android:layout_height="12dp"
                    app:layout_constraintEnd_toStartOf="@id/salesforce_link_preview_right_arrow"
                    app:layout_constraintTop_toTopOf="@id/salesforce_link_preview_right_arrow"/>


                <ImageView
                    android:id="@+id/salesforce_link_preview_right_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:src="@drawable/link_preview_arrow"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            </android.support.constraint.ConstraintLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/salesforce_rich_link_preview_footer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <Space
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"/>

        <com.salesforce.android.service.common.ui.views.SalesforceTextView
            android:id="@+id/salesforce_received_message_agent_name"
            style="@style/SalesforceStyleTextTiny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            tools:text="Bartholomew"/>

        <com.salesforce.android.service.common.ui.views.SalesforceTextView
            style="@style/SalesforceStyleTextTiny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:text="@string/salesforce_received_message_footer_separator"/>

        <com.salesforce.android.service.common.ui.views.SalesforceTextView
            android:id="@+id/salesforce_received_message_timestamp"
            style="@style/SalesforceStyleTextTiny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            tools:text="2:12 PM"/>

    </LinearLayout>

    <Space
        android:id="@+id/salesforce_rich_link_preview_footer_space"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:visibility="gone"/>

</LinearLayout>