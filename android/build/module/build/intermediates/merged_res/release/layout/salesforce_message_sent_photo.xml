<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/salesforce_message_feed_horizontal_margin"
    android:layout_marginLeft="@dimen/salesforce_message_feed_horizontal_margin"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="@dimen/salesforce_message_feed_horizontal_margin"
    android:layout_marginRight="@dimen/salesforce_message_feed_horizontal_margin"
    android:gravity="end"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp">

        <ImageView
            android:id="@+id/salesforce_sent_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:contentDescription="@string/salesforce_sent_photo_content_description"
            android:maxHeight="@dimen/salesforce_message_maximum_photo_height"
            android:minWidth="@dimen/salesforce_message_minimum_photo_width"
            android:minHeight="@dimen/salesforce_message_minimum_photo_height"
            android:scaleType="fitCenter" />

        <FrameLayout
            android:id="@+id/salesforce_sent_photo_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/salesforce_message_bubble_overlay"
            android:clickable="true"
            android:visibility="gone"
            tools:visibility="visible" />

        <com.salesforce.android.service.common.ui.views.SalesforceProgressSpinner
            android:id="@+id/salesforce_sent_photo_progress"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:visibility="gone"
            app:salesforce_highlight_arc_degrees="90"
            app:salesforce_highlight_color="@color/salesforce_brand_secondary"
            app:salesforce_rotations_per_second="1"
            app:salesforce_shadow_color="@color/salesforce_contrast_quaternary"
            app:salesforce_thickness="2dp"
            tools:visibility="visible" />

    </FrameLayout>


    <com.salesforce.android.service.common.ui.views.SalesforceTextView
        android:id="@+id/salesforce_sent_message_timestamp"
        style="@style/SalesforceStyleTextTiny"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="16dp"
        tools:text="12:49 PM" />

    <Space
        android:id="@+id/salesforce_sent_message_footer_space"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:visibility="gone" />

</LinearLayout>
