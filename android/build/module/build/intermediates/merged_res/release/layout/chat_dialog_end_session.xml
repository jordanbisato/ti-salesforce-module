<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:theme="@style/ServiceChatTheme">


    <com.salesforce.android.service.common.ui.views.SalesforceTextView
        android:id="@+id/chat_end_session_title"
        style="?attr/sc_dialogTitleStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/chat_dialog_title_bottom_margin"
        android:layout_marginLeft="@dimen/chat_dialog_text_margin"
        android:layout_marginRight="@dimen/chat_dialog_text_margin"
        android:layout_marginTop="@dimen/chat_dialog_text_margin"
        android:text="@string/chat_dialog_end_session_title"
        />

    <com.salesforce.android.service.common.ui.views.SalesforceTextView
        android:id="@+id/chat_end_session_message"
        style="?attr/sc_dialogMessageStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/chat_dialog_text_margin"
        android:layout_marginLeft="@dimen/chat_dialog_text_margin"
        android:layout_marginRight="@dimen/chat_dialog_text_margin"
        android:text="@string/chat_dialog_end_session_message"
        />

    <LinearLayout
        style="?buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/chat_dialog_action_area_height"
        android:gravity="end|center_vertical"
        >

        <com.salesforce.android.service.common.ui.views.SalesforceButton
            android:id="@+id/chat_end_session_cancel"
            style="?buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/chat_dialog_action_button_height"
            android:layout_marginBottom="@dimen/chat_dialog_action_button_margin"
            android:layout_marginEnd="0dp"
            android:layout_marginLeft="@dimen/chat_dialog_action_button_margin"
            android:layout_marginRight="0dp"
            android:layout_marginStart="@dimen/chat_dialog_action_button_margin"
            android:layout_marginTop="@dimen/chat_dialog_action_button_margin"
            android:gravity="center"
            android:minWidth="@dimen/chat_dialog_action_button_min_width"
            android:padding="@dimen/chat_dialog_action_button_padding"
            android:text="@string/chat_dialog_negative"
            android:textColor="?colorAccent"
            />

        <com.salesforce.android.service.common.ui.views.SalesforceButton
            android:id="@+id/chat_end_session_positive"
            style="?buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/chat_dialog_action_button_height"
            android:layout_margin="@dimen/chat_dialog_action_button_margin"
            android:gravity="center"
            android:minWidth="@dimen/chat_dialog_action_button_min_width"
            android:padding="@dimen/chat_dialog_action_button_padding"
            android:text="@string/chat_dialog_end_session_positive"
            android:textColor="?colorAccent"
            />

    </LinearLayout>

</LinearLayout>
