<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        style="@style/Base.SalesforceStyle.Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/pre_chat_banner_padding"
        android:paddingLeft="@dimen/pre_chat_banner_padding"
        android:paddingRight="@dimen/pre_chat_banner_padding"
        android:paddingTop="@dimen/pre_chat_banner_padding">

        <com.salesforce.android.service.common.ui.views.SalesforceTextView
            android:id="@+id/pre_chat_header_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pre_chat_banner_text"
            android:textAlignment="center"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/pre_chat_separator_padding"
        android:paddingTop="@dimen/pre_chat_separator_padding">

        <View
            android:id="@+id/pre_chat_header_horizontal_rule"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="@dimen/salesforce_message_feed_horizontal_margin"
            android:layout_marginLeft="@dimen/salesforce_message_feed_horizontal_margin"
            android:layout_marginRight="@dimen/salesforce_message_feed_horizontal_margin"
            android:layout_marginStart="@dimen/salesforce_message_feed_horizontal_margin"
            android:layout_marginTop="16dp"
            android:background="@color/salesforce_contrast_secondary"/>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/pre_chat_header_horizontal_rule_icon"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/pre_chat_banner_icon_width"
            android:layout_gravity="center"
            android:background="@color/salesforce_contrast_inverted"
            android:contentDescription="@null"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:tint="@color/salesforce_brand_primary"
            app:srcCompat="@drawable/chat_ic_bubble"/>

    </FrameLayout>
</LinearLayout>
