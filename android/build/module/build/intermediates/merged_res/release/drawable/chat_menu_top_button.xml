<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/salesforce_brand_secondary"/>
            <corners
                android:topLeftRadius="@dimen/salesforce_message_bubble_corner_radius"
                android:topRightRadius="@dimen/salesforce_message_bubble_corner_radius"/>
        </shape>
    </item>

    <item android:state_hovered="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/salesforce_brand_secondary"/>
            <corners
                android:topLeftRadius="@dimen/salesforce_message_bubble_corner_radius"
                android:topRightRadius="@dimen/salesforce_message_bubble_corner_radius"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/salesforce_brand_secondary"/>
            <corners
                android:topLeftRadius="@dimen/salesforce_message_bubble_corner_radius"
                android:topRightRadius="@dimen/salesforce_message_bubble_corner_radius"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/salesforce_contrast_inverted"/>
            <corners
                android:topLeftRadius="@dimen/salesforce_message_bubble_corner_radius"
                android:topRightRadius="@dimen/salesforce_message_bubble_corner_radius"/>
        </shape>
    </item>
</selector>

